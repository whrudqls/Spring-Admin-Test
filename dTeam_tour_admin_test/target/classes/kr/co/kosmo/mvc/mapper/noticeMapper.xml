<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="notice">
	<insert id="add" parameterType="nvo">
		Insert Into notice_semi
		Values(notice_semi_seq.nextVal,#{nsub},#{nwriter},#{ncontent},sysdate,#{macode})
	</insert>

	<select id="list" resultType="nvo">
		select * from notice_semi order by
		1 desc
	</select>

	<delete id="del" parameterType="int">
		delete from notice_semi where
		nnum=#{nnum}
	</delete>

	<select id="detail" resultType="nvo" parameterType="int">
		select * from
		notice_semi where nnum=#{nnum} order by 1 desc
	</select>

	<update id="modify" parameterType="nvo">
		update notice_semi
		set
		nsub=#{nsub},
		ncontent=#{ncontent}
		where nnum=#{nnum}
	</update>
</mapper>